<h1>Listing Contacts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>App1</th>
      <th>App2</th>
      <th>App3</th>
      <th>Comments</th>
      <th>Completed</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.address %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.date1 %></td>
        <td><%= contact.date2 %></td>
        <td><%= contact.date3 %></td>
        <td><%= contact.comments %></td>



        <% if contact.completed == "1" %> 
          <td><%= "Completed" %></td>
        <% else %>
          <td><%= "No" %></td>
        <% end %>

        <% if contact.paid == "1" %>
          <td><%= "Paid" %></td>
        <% else %>
          <td><%= "No" %></td>
        <% end %>

        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

